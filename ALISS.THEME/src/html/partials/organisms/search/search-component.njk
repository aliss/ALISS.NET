

{% macro search_component(params) %}
<div class="aliss-organism-search {{ params.component_classes }}">
  <h2>{{ params.component_title | safe }}</h2>
  <p>{{ params.component_text | safe }}</p>

  <div class="aliss-organism-search__block">
    {%- for form_params in params.form_params %}
      <form class="aliss-search-form {{ form_params.form_classes }}" action="{{ form_params.form_action }}">
        <fieldset>
          <label for="aliss-search-{{ form_params.form_name }}">{{ form_params.form_label_text }}:</label>
          <div>
            <input type="text" name="aliss-search-{{ form_params.form_name }}" id="aliss-search-{{ form_params.form_name }}" placeholder="{{ form_params.form_input_placeholder_text }}" value="">
            <button {%- for attribute in form_params.form_submit_attributes %} {{attribute.attribute}}="{{attribute.value}}"{% endfor %} class="btn btn--primary" type="submit">Search</button>
          </div>
        </fieldset>
      </form>
    {% endfor %}
  </div>
</div>
{% endmacro %}


